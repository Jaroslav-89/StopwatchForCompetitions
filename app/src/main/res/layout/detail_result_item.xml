<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/athletePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="позиция" />

    <TextView
        android:id="@+id/athleteNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/athletePosition"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="номер" />

    <TextView
        android:id="@+id/totalLaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/athleteNumber"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="всего кругов" />

    <TextView
        android:id="@+id/totalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/totalLaps"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="общее время" />

    <ImageView
        android:id="@+id/openCloseLapsIc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_open_laps_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lapsDetailRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/athletePosition"
        tools:itemCount="5"
        tools:listitem="@layout/detail_lap_item"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>