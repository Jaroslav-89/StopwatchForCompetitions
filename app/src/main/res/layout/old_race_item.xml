<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="date" />

    <TextView
        android:id="@+id/raceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/startDate"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="raceName" />

    <TextView
        android:id="@+id/numberOfAthletes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/raceName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="numberOfAthletes" />

    <TextView
        android:id="@+id/lapDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/numberOfAthletes"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="lapDistance" />

</androidx.constraintlayout.widget.ConstraintLayout>