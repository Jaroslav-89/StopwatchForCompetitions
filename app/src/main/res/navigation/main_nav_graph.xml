<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/stopwatch">

    <fragment
        android:id="@+id/stopwatch"
        android:name="com.example.stopwatchforcompetitions.ui.stopwatch.fragment.StopwatchFragment"
        android:label="Stopwatch"
        tools:layout="@layout/fragment_stopwatch">
        <action
            android:id="@+id/action_stopwatch_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_stopwatch_to_saveRaceFragment"
            app:destination="@id/saveRaceFragment" />
        <action
            android:id="@+id/action_stopwatch_to_raceDetailFragment"
            app:destination="@id/raceDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.example.stopwatchforcompetitions.ui.favorite.fragment.FavoriteFragment"
        android:label="FavoriteFragment" />
    <fragment
        android:id="@+id/raceDetailFragment"
        android:name="com.example.stopwatchforcompetitions.ui.race_detail.fragment.RaceDetailFragment"
        android:label="RaceDetailFragment" />
    <fragment
        android:id="@+id/saveRaceFragment"
        android:name="com.example.stopwatchforcompetitions.ui.save_race.fragment.SaveRaceFragment"
        android:label="SaveRaceFragment" />
</navigation>