<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StartStopButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="FastViewResult">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="AddNumberEditText">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:clickable">false</item>
        <item name="android:textColor">@color/black_day_night</item>
        <item name="android:hint">@string/athlete_number_hint</item>
        <item name="android:textColorHint">@color/text_hint_day_night</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="AddNumberButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:backgroundTint">@color/green</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="NumberButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white_universal</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Result_tx">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/black_day_night</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SettingsTv">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">44dp</item>
        <item name="android:paddingTop">21dp</item>
        <item name="android:paddingBottom">21dp</item>
    </style>

    <style name="RaceItemTv">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_day_night</item>
    </style>
</resources>